    </lights>
    <surfaces>
        <mesh name="cone.obj">
            <material_solid>
                <color r="0.5" g="0.0" b="0.2"/>
                <phong ka="0.3" kd="0.9" ks="1.0" exponent="20"/>
                <reflectance r="0.5"/>
                <transmittance t="0.4"/>
                <refraction iof="1.9"/>
            </material_solid>
        </mesh>
        <sphere radius="1.0">
            <position x="1.5" y="0.0" z="-2.0"/>
